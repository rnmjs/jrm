{
  "name": "jrm",
  "version": "0.1.2",
  "private": true,
  "description": "JavaScript Runtime Version Manager for Node.js, Bun, and Deno.",
  "type": "module",
  "scripts": {
    "build": "./build.sh",
    "prepare": "fenge install",
    "release": "pnpm build",
    "style": "fenge",
    "style:update": "fenge -u",
    "test": "pnpm style && tsc --noEmit && vitest run --coverage --coverage.reporter=json-summary --coverage.reporter=html && make-coverage-badge --output-path badge/coverage.svg"
  },
  "dependencies": {
    "commander": "14.0.2",
    "decompress": "4.2.1",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@rnm/tscx": "0.3.10",
    "@types/decompress": "4.2.7",
    "@types/node": "22.19.7",
    "@types/semver": "7.7.1",
    "@vitest/coverage-v8": "4.0.17",
    "esbuild": "0.27.2",
    "fenge": "0.12.7",
    "make-coverage-badge": "1.2.0",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "devEngines": {
    "runtime": [
      {
        "name": "node",
        "version": ">=22.19.0"
      },
      {
        "name": "deno",
        "version": "^2.6.3"
      }
    ],
    "packageManager": {
      "name": "pnpm",
      "version": "10.23.0"
    }
  }
}
